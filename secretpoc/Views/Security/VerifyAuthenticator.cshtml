@model TOTPVerificationViewModel

@{
    ViewData["Title"] = "Verify Identity";
}

<h2>Re-authenticate for Sensitive Action</h2>

<form asp-action="VerifyAuthenticator" method="post">
    <input type="hidden" asp-for="ActionKey" />

    <div class="form-group">
        <label for="AuthenticatorCode">Authenticator Code</label>
        <input asp-for="AuthenticatorCode" class="form-control" autocomplete="one-time-code" />
        <span asp-validation-for="AuthenticatorCode" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Verify</button>
</form>
